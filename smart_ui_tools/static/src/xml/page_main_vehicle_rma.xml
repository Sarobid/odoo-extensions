<templates>
    <t t-name="PageMainVehicleRma">
        <div class="container-fluid">
            <div id="main-vehicle">
                
            </div>
            <div class="w3-sidebar" style="display:none; border:2px solid gray; right:0; top:0;" id="details-vehicle">
                <div class="container-fluid">
                    <div class="header border-bottom" style="position: sticky; top: 0; z-index: 1000; background-color: white;">
                        <div class="d-flex justify-content-between align-items-center border-bottom" style="height:50px">
                            <h5 class="mb-0" style="font-weight:bold">Détails du véhicule</h5>
                            <button type="button" class="btn-close btn-success smart_button" aria-label="Fermer" id="close-details-vehicle">Fermer</button>
                        </div>
                        <div id="details-vehicle-head" class="border-bottom"></div>
                            <div class="container-fluid">
                                <div class="d-flex justify-content-between align-items-center " style="height:50px">
                                    <h4 class="mb-0" style="font-weight:bold">Tache à faire
                                    </h4>
                                </div>
                                <div class="d-flex justify-content-between align-items-left" style="margin-bottom:5px">
                                    <span class="text-muted">
                                        Assigné : 
                                        <span class="num-task-assigne" id="taskAssigneid"></span>
                                    </span>
                                    <span class="text-muted">
                                        Non assigné: 
                                        <span class="num-task-non-assigne" id="taskNonAssigneid"></span>
                                    </span>
                                </div>
                                <div class="d-flex" style="margin-bottom:5px">
                                    <span class="text-muted">
                                        Fait : 
                                        <span class="num-task-assigne-end" id="taskNotStartid"></span>
                                    </span>
                                    <!-- <span class="text-muted">
                                        Non terminés : 
                                        <span class="num-task-assigne-no-end" id="taskNotEndid"></span>
                                    </span> -->
                                </div>
                            </div>
                        </div>
                    <div class="container-fluid">
                        <div id="details-vehicle-tache" style="margin-top:10px"></div>
                    </div>
                </div>
            </div>

        </div>
    </t>
</templates>
