<templates>
    <t t-name="PageListPieceMecano">
            <div class="container-fluid px-1">
                <div class="row g-0 oe_background_grey" style="max-height: 88vh; overflow-y: auto;">
                    <t t-foreach="dataPieces" t-as="item">
                    <div class="piece-item col-12 col-md-6 col-lg-4 mb-1">
                        <div class="card h-100 shadow-sm border-0 piece-card" t-att-data-id="item.id" style="cursor:pointer; padding: 0.5rem;">

                            <!-- Titre principal -->
                            <div class="mb-0">
                                <h7 class="mb-0">
                                <strong style="font-weight:bold;color:rgb(0, 160, 157)">
                                    <t t-if="item.product_id"><t t-esc="item.product_id[1]" /></t>
                                    <t t-else="">Non défini</t>
                                </strong>
                                </h7>
                                <hr class="my-2" />
                            </div>

                            <!-- Informations -->
                            <div class="text-dark fs-6">
                                <h7 class="mb-0 display-9"><strong>Quantité :</strong> 
                                    <span class="">
                                        <t t-if="item.product_uom_qty"><t t-esc="item.product_uom_qty" /></t>
                                        <t t-else=""></t>
                                    </span>
                                    <span class="">
                                        <t t-if="item.product_uom_id"><t t-esc="item.product_uom_id[1]" /></t>
                                        <t t-else=""></t>
                                    </span>
                                </h7>
                                <t t-if="item.state_sav_mec == 'valid'">
                                    <h7 class="mb-0 display-9"><strong>Statut :</strong> 
                                        <span class="">
                                            <span class="text-success">Validé</span>
                                        </span>
                                    </h7>
                                    <button class="btn cancel-button" t-att-data-id="item.id">Annuler validation</button>
                                  </t>
                                <t t-elif="item.state_sav_mec == 'denied'">
                                    <h7 class="mb-0 display-9"><strong>Statut :</strong> 
                                        <span class="">
                                            <span class="text-danger">Refusé</span>
                                        </span>
                                    </h7>
                                    <button class="btn cancel-button" t-att-data-id="item.id">Annuler refus</button>
                                </t>
                                <t t-else="">
                                    <button class="btn valid-button" t-att-data-id="item.id">Valider</button>
                                    <button class="btn denied-button" t-att-data-id="item.id">Refuser</button>
                                </t>
                            </div>
                        </div>
                    </div>
                    </t>
                </div>
            </div>
        <!-- Style -->
        <style>
        .piece-card {
            background-color: #fff;
            border-radius: 12px;
            transition: all 0.2s ease-in-out;
        }

        .piece-card:hover {
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
            background-color: #fff;
            transform: translateY(-4px);
        }

        .piece-card p {
            font-size: 1rem;
            line-height: 1.4;
        }

        h4 {
            font-size: 1.25rem;
        }
        </style>
    </t>
</templates>