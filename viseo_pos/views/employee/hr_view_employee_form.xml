<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="viseo_pos_hr_view_employee_form_herit" model="ir.ui.view">
        <field name="name">viseo_pos.hr.view.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="generate_code_pin" type="object" class="oe_stat_button"
                         string="Generer code Pin" groups="viseo_pos.group_generate_code_pin"/>
            </xpath>
            <xpath expr="//sheet/group/group[1]/field[@name='mobile_phone']" position="before">
                <field name="code_pin" readonly="1"/>
            </xpath>
            
        </field>
    </record>

</odoo>
